<h2 style='text-align: center;'>Challenges</h2>


<% @challenge.each do |challenge| %>
<div class="box">
<ul id='challenge_index'>
<li id='title'><%= challenge.title %></li>
<li>Category: <%= challenge.category %></li>
<li>Description: <%= challenge.description %></li>
<li><button><%= link_to "Add Solution", "/challenges/#{challenge.id}/solutions/add_solution"   %></li></button>
<li><button><%= link_to "View Solutions", "/challenges/#{challenge.id}/solutions" %></li></button>
</ul>
</div>
	<% end %>
